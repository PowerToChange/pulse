<div class="clearfix">
  <% form_tag session_path, :id => 'login_form',  :enctype => "application/x-www-form-urlencoded" do -%>
  <div class="login_sector">
    <div class="login_prompt"><b>Login</b>:</div>
    <div class="clearfix">
      <label for="username">Username:</label>
      <%= text_field_tag('username', params[:username], :class => "inputtext") %>
    </div>
    <div class="clearfix">
      <label for="password">Password</label>
      <%= password_field_tag('password', '', :class => "inputtext") %>
    </div>

    <div class="clearfix">
      <label for="remember_me">Remember me:</label>
      <%= check_box_tag 'remember_me', 1, false, :class => "inputcheck" %>
    </div>

    <%= submit_tag 'Log in' %>
  </div>
  <% end -%>

  <script src="http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php" type="text/javascript"></script>
  <div class="login_sector_fb">
    <div class="login_prompt">Or <b>login</b> with Facebook:</div>
    <fb:login-button size="medium" background="light" length="long" onlogin="facebook_onlogin_ready();"></fb:login-button>
  </div>
</div>

     <script src="/javascripts/fbconnect.js" type="text/javascript"></script>
      <script type="text/javascript">
       FB.init("<%= FACEBOOK["key"] %>", "/facebook/xd_receiver.htm");
     </script>
     <script type="text/javascript">//window.onload = function() { facebook_onload(false); };</script> 

  </body></html>