<tr id="<%= dom_id(permission) %>">
  <td>
    <%= link_to_remote(image_tag('edit.png'), :url => edit_permission_path(permission),
                                              :before => "$('#spinner').show()") %>
    <%= link_to_remote(image_tag('delete.png'), :url => permission_path(permission), 
                                    						:method => :delete,
                                    						:confirm => "Are you sure you want to delete this permission?",
                                     						:before => "$('##{dom_id(permission)}').hide()") %>
  </td>
  <td><%= permission.controller %></td>
  <td><%= permission.action %></td>
  <td><%= permission.description %></td>
</tr>