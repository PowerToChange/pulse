<%
  result = "<div class='autoCompleteResult' title='Goto #{person_ac.first_name.capitalize}&rsquo;s profile'>" +
           "<div class='acLinkPath' style='display: none;'>/people/#{person_ac.id}</div>" +
           "<div class='autoCompletePic'>#{ac_profile_picture_for_person(person_ac)}</div>" +

           "<div class='autoCompleteInfo'>" +
           "<div class='autoCompleteName'>#{person_ac.first_name.capitalize} #{person_ac.last_name.capitalize}</div>"

  if person_ac.timetable_id.present?
    result += "<div class='autoCompleteIconLink'>" +
              link_to(image_tag('silk/calendar.png'), "/people/#{person_ac.id}/timetables/#{person_ac.timetable_id}", :title => "Goto #{person_ac.first_name.capitalize}&rsquo;s timetable") +
              "</div>"
  end

  if !currently_impersonating && (Cmt::CONFIG[:allow_impersonate] || is_admin?)
    result += "<div class='autoCompleteIconLink'>" +
              link_to(image_tag('silk/user_go.png'), impersonate_person_path(person_ac.id), :title => "Impersonate #{person_ac.first_name.capitalize}") +
              "</div>"
  end

  result += "<div class='autoCompleteExtraInfo'>#{ac_info_for_person(person_ac)}</div>" +
            "</div>" +
            "</div>"
%>

<%= result %>