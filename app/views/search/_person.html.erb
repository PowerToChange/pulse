<li class='searchResult searchResultPerson'>
  <div class='searchResultPic'>
    <%=link_to("#{profile_picture_for_person(person)}", "/people/#{person.id}", {:title => "Goto #{person.first_name.capitalize}'s profile"})-%>
  </div>

  <div class='searchResultInfo'>
    <div class='searchResultName'><%=link_to("#{person.first_name.capitalize} #{person.last_name.capitalize}".gsub(/#{@q}/i) {|match| "<strong>#{match}</strong>"}, "/people/#{person.id}")-%></div>
    <div class='searchResultExtraInfo'><%="#{info_for_person(person)}"-%></div>
  </div>

  <div class='searchResultActions subtle'>
    <%- if authorized?(:show, :timetables) && person.timetable_id.present? -%>
      <br/>
      <%=link_to("View Timetable", "/people/#{person.id}/timetables/#{person.timetable_id}", :class => "viewTimetable", :title => "Goto #{person.first_name.capitalize}&rsquo;s timetable")-%>
    <%- end -%>
    <%- if authorized?(:new, :emails) -%>
<br/>
      <%=link_to("Send Email", new_email_url("person[]" => person.id), :class => "sendEmail", :title => "Compose an email to #{person.first_name.capitalize}")-%>
    <%- end -%>
  </div>
</li>
