<div class="dashmodule" id='stage'>
  <div class="moduletitle">
    <h2><%= link_to_function "Stage <span>-</span>", "toggle('stage');" %></h2>
  </div>
  <div class="modulecontent">
    <table align="right">
      <tr align="right">
        <td style="width: 50%">Stage 1</td><td style="width: 50px"><%= number_with_delimiter @stage[1] %><td/>
      </tr><tr align="right">
        <td style="width: 50%">Stage 2</td><td style="width: 50px"><%= number_with_delimiter @stage[2] %><td/>
      </tr><tr align="right">
        <td style="width: 50%">Stage 3</td><td style="width: 50px"><%= number_with_delimiter @stage[3] %><td/>
      </tr><tr align="right">
        <td style="width: 50%">No value entered</td><td style="width: 50px"><%= number_with_delimiter @stage[nil] %><td/>
      </tr>
      <tr align="right">
        <td style="width: 50%"><b>Total</b></td><td><b><%= number_with_delimiter(@stage.values.sum) %></b></td>
      </tr>
    </table>
  </div>
</div>
