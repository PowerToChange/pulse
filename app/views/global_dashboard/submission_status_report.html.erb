<style>
  label {
    padding: 0 0 0 0;
    width: 160px;
  }
</style>

<% form_for(:whq_stat) do |f| %>
  <tr>
  <%= f.label :global_area, "Area" %>
  <%= f.select :global_area_id, options_for_select([""] + @area_options, "") %>
  <BR/>
  <%= f.label :mcc %>
  <%= f.select :mcc, options_for_select(@mcc_options, "") %>
  <BR/>
  <%= f.label :month %>
  <%= f.select :month_id, options_for_select([""] + @month_options, Semester.current.month.id) %>
  <BR/>

  <%- with_str = "'a='+$('#whq_stat_global_area_id').val()+'&mcc='+$('#whq_stat_mcc').val()+'&m='+$('#whq_stat_month_id').val()" %>
  <%= observe_field :whq_stat_month_id, 
        :url => { :controller => :global_dashboard, :action => :submission_status_report },
        :with => with_str
   %>
   <%= observe_field :whq_stat_mcc, 
        :url => { :controller => :global_dashboard, :action => :submission_status_report },
        :with => with_str
   %>
   <%= observe_field :whq_stat_global_area_id, 
        :url => { :controller => :global_dashboard, :action => :submission_status_report },
        :with => with_str
   %>

   <br/><h3 id="whq_message">&nbsp;</h3><br/>

   <style> 
     label { 
       padding: 0 0 0 0; 
       width: 160px; 
     } 
   </style> 

   <div id="stats">
     Choose a country, mcc and month to see the country submission stats.
   </div>

   <br/><br/><%= submit_tag "Save" %>
<% end %>
