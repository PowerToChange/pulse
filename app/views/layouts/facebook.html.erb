<%= stylesheet_link_tag url_for(:controller => "/stylesheets/facebook.css"), :media => "all" %>
<fb:header decoration="no_padding">
  Your CCC Involvement Portal
</fb:header>
<br/>
<fb:tabs>
<fb:tab-item href="<%= controller.facebook_canvas_path %>" title="Involvement" <%= 'selected="true"' if request.path == '/facebook/' %>></fb:tab-item>
<%- if @person.groups.length == 1 -%>
<fb:tab-item href="<%= controller.facebook_canvas_path %>groups/<%= @person.groups.first.id %>" title="Group" <%= 'selected="true"' if request.path.include?('/facebook/groups') %>></fb:tab-item>
<%- end -%>
<%- if @person.groups.length > 1 -%>
<fb:tab-item href="<%= controller.facebook_canvas_path %>groups" title="Groups" <%= 'selected="true"' if request.path.include?('/facebook/groups') %>></fb:tab-item>
<%- end -%>
</fb:tabs>
<br/>
<%= yield %>
