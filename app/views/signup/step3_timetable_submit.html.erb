<%- instruction_block do %>

  You're done!
  <% if session[:joined_collection_group] == true %>
    Someone will contact you with more info soon.
  <% else %>
    Your group leader will contact you with more info.
  <% end %>
  <br/>
  
  <% if @leaders.present? %>
    <br/>
    Feel free to email
    <%=
      @leaders.map{ |i|
        if i.person.present? && i.person.email
          mail_to i.person.email, i.person.full_name, :title => i.person.email
        end
      }.join(', ')
    %>
    <% if @group.email.present? %>
      or <%= mail_to @group.email %>
    <% end %>
    <br />
  <% end %>
  
<%- end %>

<div class="center">

  <% if session[:from_facebook_canvas] == true %>
    <%= link_to @finished_button_text, '#', :onclick => "top.location.href='/leave_facebook_and_js_redirect?js_redirect_url=#{Facebook::FANPAGE_URL}'", :class => "action-button" %>
  <% else %>
    <%= link_to @finished_button_text, { :controller => :signup, :action => :finished }, :class => "action-button" %>
  <% end %>

  <br/><br/>
  <iframe src="http://www.facebook.com/plugins/likebox.php?href=https%3A%2F%2Fwww.facebook.com%2Fcampusforchrist&amp;width=407&amp;colorscheme=light&amp;show_faces=true&amp;stream=true&amp;header=false&amp;height=557" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:407px; height:557px;" allowTransparency="true"></iframe>

</div>
