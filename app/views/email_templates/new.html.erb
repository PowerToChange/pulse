<div class="title">New email_template</div>

<% form_for([@correspondence_type, @email_template]) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field(:correspondence_type_id, :value => @correspondence_type.id) %>
  <p>
    <%= f.label :outcome_type %><br />
    <%= f.select(:outcome_type, @correspondence_type.get_available_outcomes, { :include_blank => true }) %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :from %><br />
    <%= f.text_field :from %>
  </p>
  <p>
    <%= f.label :bcc %><br />
    <%= f.text_field :bcc %>
  </p>
  <p>
    <%= f.label :cc %><br />
    <%= f.text_field :cc %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', correspondence_type_path(@correspondence_type) %>