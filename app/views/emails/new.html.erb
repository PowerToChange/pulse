<h1>New email</h1>

<script src="/ckeditor/ckeditor.js" type="text/javascript"></script>

<% form_for(@email) do |f| %>
  <%- if @people -%>
  <p>
  <label>To</label>
  <span><%= @people.collect(&:email).join(", ") %></span>
  </p>
  <%- end -%>

  <%= f.error_messages %>
  <%= f.hidden_field :search_id %>
  <%= f.hidden_field :people_ids %>
  <p>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </p>
  <p>
    Use {{first_name}} and {{last_name}} in the body to substitute the recipients' first and last names, respectively.
  </p>
  <p>
    <%= f.label :body %>
    <br/>
    <br/>
    <%= f.text_area :body, :cols => 80, :class => "ckeditor" %>
  </p>
  <p>
    <%= f.submit 'Send Email' %> or 
    <%= link_to 'cancel', :back, :class => 'cancel' %>
  </p>
<% end %>
