<% remote_form_for @person, :url => set_initial_campus_person_url(@person.id) do %>
  <div class='.center'>Please choose your campus.</div>
  <div id='errors'>
    <%= error_messages_for 'campus_involvement' %>
  </div>
  <%= render :partial => 'primary_campus_involvement' %>
  <%= submit_tag 'Save' %>
<% end %>
