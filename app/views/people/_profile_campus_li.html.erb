<li id="ci_<%= ci.id %>">
  <%= link_to_remote("", 
        {:url => person_campus_involvement_path(@person, ci), 
        :confirm => "Are you sure you want to remove #{@person == @me ? 'yourself' : @person.first_name} from #{ci.campus.name}?", 
        :method => :delete,
        :before => "$('#spinner').show()"}, {:title => "Remove #{@person == @me ? 'yourself' : @person.first_name} from #{ci.campus.name}", :class => "removeInvolvementIconLink"})  if is_ministry_leader || @person == @me %>
  <%= link_to(ci.campus.short_name, directory_people_url(:campus => ci.campus.id, :format => :html)) %>
  <%= ci.try(:school_year).try(:name) %>
  <%= ci.find_or_create_ministry_involvement.ministry_role.name if @student %>
</li>

<script type="text/javascript">
  $(document).ready(function(){
    $(".removeInvolvementIconLink").hover(function(){$(this).parent().css("text-decoration", "line-through")}, function(){$(this).parent().css("text-decoration", "none")});
  });
</script>
