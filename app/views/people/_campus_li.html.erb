<li id="ci_<%= ci.id %>">
<%= link_to_remote(image_tag('delete.png'), :url => person_campus_involvement_path(@person, ci),
      :confirm => "Are you sure you want to remove #{@person.first_name} from #{ci.campus.name}?",
      :method => :delete,
      :before => "$('#spinner').show()")  if is_ministry_leader || @person == @me %>
      <%= link_to(ci.campus.short_name, directory_people_url(:campus => ci.campus.id, :format => :html)) %>
</li>
