<h2>Join a group&nbsp;&nbsp;<%= spinner('gt') %></h2>	  
<div>Click on Group Categories to see the list of groups you can join in that category.</div>
<div id="customizebody" class="accordion">
	<%- @ministry.all_group_types.each do |gt| -%>
	  <% if !gt.groups.empty?%>
		<div>
			<div class="title"><%= gt.group_type %> <%= link_to_function("click here to hide these groups", "$('##{dom_id(gt)}').toggle();", :class => 'help_block') %></div>
      <div id="<%= dom_id(gt) %>"> 
			  <%= render :partial => 'groups/group_type_groups', :locals => {:gt => gt} %>
			</div>
    </div>
	  <%- end -%>
	<%- end -%>	
</div>
