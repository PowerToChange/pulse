<div id="groups">
  <%- campus_id = @campus ? @campus.id : nil -%>
  <%- gt_groups = @groups.select{|g| g.group_type_id == gt.id} -%>

  <% unless gt_groups.empty? %>
    <%- gt_groups.each do |group| -%>
      <div id=<%= "group_#{group.id}" %> >
        <%= render :partial => 'groups/group', :locals => {:group => group} %>
      </div>
    <%- end -%> 
  <% else %>
	   No groups to join under this category currently.
	   <br />
     <br />
  <% end %>
  <%- if flash[:notice_group] %><div class="flash notice" id="flash_notice"><%= flash[:notice_group]  %></div><%- end %>
</div>
