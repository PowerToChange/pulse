<%= javascript_include_tag "inputLiveValidations.js" %>
<%= javascript_include_tag "monthly_reports.js" %>

<h1 id="statsTitle">Measurements</h1>
<div class="backLink"><%= link_to 'Cancel and go back', url_for(:controller => :stats, :action => :index) %></div>

<br/>

<div class="statsFormContainer">
  <div id="newSemesterHighlightsFormContainer" class="statsFormBox">
    <h2 class="statsFormBoxTitle">Submit your monthly highlights</h2>
    <br/>
    <% form_for(@monthly_report) do |f| %>
      <%= f.error_messages %>
      <table>
        <tr class="statsFormField">
          <td><%= f.label :month, "Month:" %></td>
          <td><%= f.collection_select :month_id, @months, :month_id, :month_desc, {}, {:onChange => "beginLoadingMonthlyInputTab()"} %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :campus, "Campus:" %></td>
          <td><%= f.collection_select :campus_id, @campuses, :campus_id, :campus_desc, {}, {:onChange => "beginLoadingMonthlyInputTab()"} %></td>
        </tr>
     </table>
    <% end %>
	<div id="inputFields" class="inputsContainer">
		<div id="statsSpinnerContainer"><%= image_tag("/images/default/shared/blue-loading.gif", :id => "spinnerStatsResults", :alt => "Spinner") %></div>
	    <div id="monthlyReportInputFields" class="reportInputContainer">
	    <%= render :partial => 'monthly_reports/input_lines' %>    	
	    </div>
	</div>
  </div>
</div>

<br/>
<div class="backLink"><%= link_to 'Cancel and go back', url_for(:controller => :stats, :action => :index) %></div>
