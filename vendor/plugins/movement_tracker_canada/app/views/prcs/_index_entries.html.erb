	lines.each do | key, input_stat |
	  if input_stat[:column_type] == :database_column
	%>
	      <td>
	        <%=h  prc.attributes[input_stat[:column].to_s] %>
	      </td>
	<%
	  end
	end
	%>
		<td><%= # link_to 'x', url_for(:controller => :stats, :action => :edit, :prc => prc ) 
         %>
		    <%= link_to_remote 'x',
		        :url => { :controller => :prcs, :action => 'edit', :id => prc.id },
		        :update => 'prcIndexFields',
		        :method => :get,
		        :before => "beginLoadingPrcInputTab",
		        :complete => "completeLoadingPrcInputTab" %>
		</td>

 </tr>
<% end %> 
