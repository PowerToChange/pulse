<li class='searchResult'>
  <div class='searchResultPic'>
    <%=link_to("#{profile_picture_for_person(person)}", "/people/#{person.id}", {:title => "Goto #{person.first_name.capitalize}'s profile"})%>
  </div>

  <div class='searchResultInfo'>
    <div class='searchResultName'><%=link_to("#{person.first_name.capitalize} #{person.last_name.capitalize}", "/people/#{person.id}", {:title => "Goto #{person.first_name}'s profile"})%></div>
    <div class='searchResultExtraInfo'><%="#{info_for_person(person)}"%></div>
  </div>

  <div class='searchResultActions'>
    <% if authorized?(:show, :timetables) && person.timetable_id.present? %>
      <br/>
      <%=link_to("View Timetable", "/people/#{person.id}/timetables/#{person.timetable_id}")%>
    <% end %>
    <% if authorized?(:new, :emails) %>
      <br/>
      <%=link_to("Send Email", url_for(:controller => :emails, :action => :new, :person => "#{person.id}"))%>
    <% end %>
  </div>
</li>
