<li class='searchResult'>
  <div class='searchResultPic'>
  </div>

  <div class='searchResultInfo searchResultGroup'>
    <div class='searchResultName'>
      <%=link_to("#{group.name.capitalize}", "/groups/#{group.id}")%>
    </div>

    <div class='searchResultExtraInfo'><%="#{info_for_group(group)}"%></div>
  </div>

  <div class='searchResultActions'>

    <% unless group.is_associated(@me) %>
    <br/>
    <%= link_to_remote('Join group',
        {:url => { :action => "joingroup", :controller => 'group_involvements',
                   :person_id => @my.id,
                   :group_id => group.id,
                   :level => 'member' },
         :method => :post},
        {:class => "joinGroup"})
    %>
    <% end %>

    <br/>
    Email leaders or all members
  </div>
</li>
