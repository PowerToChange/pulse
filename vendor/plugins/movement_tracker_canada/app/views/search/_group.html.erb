<li class='searchResult'>
  <div class='searchResultPic'>
  </div>

  <div class='searchResultInfo'>
    <div class='searchResultName'><%=link_to("#{group.name.capitalize}", "/groups/#{group.id}", {:title => "Goto #{group.name}"})%>
    
    <%= "#{Date::DAYNAMES[group.day]}'s" if group.day.present? %>

    <% midnight = Time.now.beginning_of_day %>
    <%= "at #{(midnight + group.start_time).to_s(:time)}" if group.start_time %>

    <%= " to #{(midnight + group.end_time).to_s(:time)}" if group.end_time %>
</div>
    <div class='searchResultExtraInfo'><%="#{info_for_group(group)}"%></div>
  </div>

</li>
