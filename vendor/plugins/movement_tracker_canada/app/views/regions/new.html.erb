<h1>New Region</h1>
<br/>
<% form_for(@region) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :desc, "Description" %><br />
    <%= f.text_field :desc %>
  </p>
  <p>
    <%= f.label :country_id, "Country" %><br />
    <%= f.collection_select :country_id, Country.all, :id, :desc %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<br/>
<%= link_to 'Back', regions_path %>