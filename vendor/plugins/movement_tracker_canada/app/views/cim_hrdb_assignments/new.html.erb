<h1>New Assignment</h1>
<br/>
<% form_for(@cim_hrdb_assignment, :url => cim_hrdb_person_cim_hrdb_assignments_path(@cim_hrdb_person), :action => 'create') do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :campus_id %><br />
    <%= f.collection_select :campus_id, Campus.all, :id, :desc %>
  </p>
  <p>
    <%= f.label :assignmentstatus_id, "Status" %><br />
    <%= f.collection_select :assignmentstatus_id, Assignmentstatus.all, :id, :desc %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<br/>
<%= link_to 'Back', edit_cim_hrdb_person_path(@cim_hrdb_person) %>