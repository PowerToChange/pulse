<h1 id="statsTitle">Statistics</h1>
<div class="backLink"><%= link_to 'Cancel and go back', url_for(:controller => :stats, :action => :index) %></div>

<br/>

<div class="statsFormContainer">
  <div id="newSemesterHighlightsFormContainer" class="statsFormBox">
    <h2 class="statsFormBoxTitle">Submit your semester highlights</h2>
    <br/>
    <% debugger %>
    <% form_for(@semester_report) do |f| %>
      <%= f.error_messages %>
      <table>
        <tr class="statsFormField">
          <td><%= f.label :semester, "Semester:" %></td>
          <td><%= f.collection_select :semester_id, @semesters, :semester_id, :semester_desc %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :campus, "Campus:" %></td>
          <td><%= f.collection_select :campus_id, @campuses, :campus_id, :campus_desc %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :semesterreport_avgPrayer, "Avg - hours of prayer:" %></td>
          <td><%= f.text_field :semesterreport_avgPrayer, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :average_attendance_weekly_meetings, "Avg weekly meetings attendance:" %></td>
          <td><%= f.text_field :average_attendance_weekly_meetings, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_challenged_staff, "No challenged to staff:" %></td>
          <td><%= f.text_field :number_challenged_staff, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_challenged_internships, "No challenged to internships:" %></td>
          <td><%= f.text_field :number_challenged_internships, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_frosh_involved, "No frosh involved:" %></td>
          <td><%= f.text_field :number_frosh_involved, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_staff_led_dg, "No staff-led DGs:" %></td>
          <td><%= f.text_field :number_staff_led_dg, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_in_staff_led_dg, "No in staff-led DGs:" %></td>
          <td><%= f.text_field :number_in_staff_led_dg, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_student_led_dg, "No student-led DGs:" %></td>
          <td><%= f.text_field :number_student_led_dg, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_in_student_led_dg, "No in student-led DGs:" %></td>
          <td><%= f.text_field :number_in_student_led_dg, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_sp_mult_in_staff_led_dg, "No spiritual multipliers in staff DGs:" %></td>
          <td><%= f.text_field :number_sp_mult_in_staff_led_dg, :size => 4, :value => 0 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_sp_mult_in_student_led_dg, "No spiritual multipliers in student-led DGs:" %></td>
          <td><%= f.text_field :number_sp_mult_in_student_led_dg, :size => 4, :value => 0 %></td>
        </tr>
      </table>
      <p>
        <br/>
        <div class="center"><%= f.submit "Submit" %></div>
      </p>
      <br/>
    <% end %>
  </div>
</div>

<div id="statsDescriptions">
  <p>
    <p><h3>Label:</h3> Description.</p>
  </p>
</div>

<br/>
<div class="backLink"><%= link_to 'Cancel and go back', url_for(:controller => :stats, :action => :index) %></div>
