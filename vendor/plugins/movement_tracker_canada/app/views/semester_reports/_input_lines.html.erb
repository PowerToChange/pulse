    <% form_for(semester_report) do |f| %>
      <%= f.error_messages %>
      <%= f.hidden_field :semester_id %>
      <%= f.hidden_field :campus_id %>
      <table>
        <tr class="statsFormField">
          <td><%= f.label :semesterreport_avgPrayer, "Avg - hours of prayer:" %></td>
          <td><%= f.text_field :semesterreport_avgPrayer, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :number_frosh_involved, "No frosh involved:" %></td>
          <td><%= f.text_field :number_frosh_involved, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :total_students_in_dg, "Number of students in DGs:" %></td>
          <td><%= f.text_field :total_students_in_dg, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :total_spiritual_multipliers, "Number of spiritual multipliers:" %></td>
          <td><%= f.text_field :total_spiritual_multipliers, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :event_spiritual_conversations, "Event exposures - Spiritual Conversations:" %></td>
          <td><%= f.text_field :event_spiritual_conversations, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :event_gospel_prensentations, "Event exposures - Gospel Presentations:" %></td>
          <td><%= f.text_field :event_gospel_prensentations, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :media_spiritual_conversations, "Media exposures - Spiritual Conversations:" %></td>
          <td><%= f.text_field :media_spiritual_conversations, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :media_gospel_prensentations, "Media exposures - Gospel Presentations:" %></td>
          <td><%= f.text_field :media_gospel_prensentations, :size => 4 %></td>
        </tr>
        <tr class="statsFormField">
          <td><%= f.label :total_core_students, "Total core students:" %></td>
          <td><%= f.text_field :total_core_students, :size => 4 %></td>
        </tr>
      </table>
      <p>
        <br/>
        <div class="center"><%= f.submit "Submit" %></div>
      </p>
      <br/>
    <% end %>
