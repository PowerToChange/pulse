<h2>Staff Summer Schedules <%= @current_year.desc %></h2>

<% if @report_for_this_summer.blank? %>
  <%= link_to "Submit your summer schedule", new_person_summer_report_path(@me) %>
<% else %>
  <%= link_to "View the schedule you submitted", person_summer_report_path(@me, @report_for_this_summer) %>
<% end %>