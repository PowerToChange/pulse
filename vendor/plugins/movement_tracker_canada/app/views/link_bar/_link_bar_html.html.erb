
<div id='link_bar_wrapper'>
  <div class='link_bar'>

    <ol id='tools'>
      <li><%= link_bar_tab('link_bar_tab_1', '', 'http://p2c.com/students', t('layout.top_bar.c4c_mouseover', :default => ''), t('layout.top_bar.c4c'), nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_2', '', url_for(:action => :index, :controller => :dashboard, :only_path => false), t('layout.top_bar.pulse_mouseover', :default => ''), t('layout.top_bar.pulse'), nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_3', '', 'http://p2c.com/students/resources', t('layout.top_bar.resources_mouseover', :default => ''), t('layout.top_bar.resources'), nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_4', 'menu_link project', '', t('layout.top_bar.events_menu.events_mouseover', :default => ''), "#{t('layout.top_bar.events_menu.events')}<span class='menu_link_arrow'></span>", 'events_box', active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_5', 'menu_link more_tools', '', t('layout.top_bar.more_menu.more_mouseover', :default => ''), "#{t('layout.top_bar.more_menu.more')}<span class='menu_link_arrow'></span>", 'more_tools_box', active_tab_id) %></li>
      
      <% if staff %>
        <li><%= link_bar_tab('link_bar_tab_6', 'menu_link staff', '', '', "STAFF<span class='menu_link_arrow'></span>", 'staff_box', active_tab_id) %></li>
      <% end %>

      <li><%= link_bar_tab('link_bar_tab_7', 'language', switch_languages_url(:url => url_for(:action => :index, :controller => :dashboard, :only_path => false, :locale => nil)), switch_languages_mouseover, switch_languages_text, nil, active_tab_id) %></li>

      <li><%= link_bar_tab('link_bar_tab_8', 'icon_link facebook', Facebook::FANPAGE_URL, t('layout.top_bar.icons.facebook'), '&nbsp;', nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_9', 'icon_link twitter', TWITTER_URL, t('layout.top_bar.icons.twitter'), '&nbsp;', nil, active_tab_id) %></li>
    </ol>

  </div>
</div>

<div id='events_box' class='link_menu_box'>
  <a href='<%=eventbrite[:c4c_events_link]%>' title='<%= t('layout.top_bar.events_menu.registration_mouseover', :default => '') %>'><%= t('layout.top_bar.events_menu.registration') %></a>
  <a href='http://p2cplus.com' title='<%= t('layout.top_bar.events_menu.p2cplus_mouseover', :default => '') %>'><%= t('layout.top_bar.events_menu.p2cplus') %></a>
  <a href='http://p2c.com/students/mission-trips' title='<%= t('layout.top_bar.events_menu.projects_mouseover', :default => '') %>'><%= t('layout.top_bar.events_menu.projects') %></a>
</div>

<div id='more_tools_box' class='link_menu_box'>
  <a href='https://pat.powertochange.org' title='<%= t('layout.top_bar.more_menu.pat_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.pat') %></a>
  <a href='https://connect.p2c.com/sessions' title='<%= t('layout.top_bar.more_menu.connect_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.connect') %></a>
  <a href='https://pulse2.p2c.com/shortener/' title='P2C URL Shortener'>URL SHORTENER</a>
</div>

<% if staff %>
  <div id='staff_box' class='link_menu_box'>
    <a href='http://groups.google.com/a/p2c.com/group/p2csforum/topics' title='Staff Forum'>FORUMS</a>
    <a href='http://mail.p2c.com' title='Google Mail'>MAIL</a>
    <a href='http://docs.p2c.com' title='Google Documents'>DOCUMENTS</a>
    <a href='http://calendar.p2c.com' title='Google Calendar'>CALENDAR</a>
    <a href='http://staff.powertochange.org'>THE LOOP</a>
  </div>
<% end %>
