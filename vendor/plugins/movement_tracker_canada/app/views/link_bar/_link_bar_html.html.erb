
<div id='link_bar_wrapper'>
  <div class='link_bar'>

    <ol id='tools'>
      <li><%= link_bar_tab('link_bar_tab_1', '', 'http://www.c4c.ca', t('layout.top_bar.c4c_mouseover'), t('layout.top_bar.c4c'), nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_2', '', url_for(:action => :index, :controller => :dashboard, :only_path => false), t('layout.top_bar.pulse_mouseover'), t('layout.top_bar.pulse'), nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_3', '', 'http://resources.campusforchrist.org', t('layout.top_bar.resources_mouseover'), t('layout.top_bar.resources'), nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_4', 'menu_link project', '', t('layout.top_bar.events_menu.events_mouseover'), "#{t('layout.top_bar.events_menu.events')}<span class='menu_link_arrow'></span>", 'events_box', active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_5', 'menu_link more_tools', '', t('layout.top_bar.more_menu.more_mouseover'), "#{t('layout.top_bar.more_menu.more')}<span class='menu_link_arrow'></span>", 'more_tools_box', active_tab_id) %></li>
      
      <% if staff %>
        <li><%= link_bar_tab('link_bar_tab_6', 'menu_link staff', '', '', "STAFF<span class='menu_link_arrow'></span>", 'staff_box', active_tab_id) %></li>
      <% end %>

      <li><%= link_bar_tab('link_bar_tab_7', 'language', witch_languages_text, currently_english, '&nbsp;', nil, active_tab_id) %></li>

      <li><%= link_bar_tab('link_bar_tab_8', 'icon_link facebook', Facebook::FANPAGE_URL, t('layout.top_bar.icons.facebook'), '&nbsp;', nil, active_tab_id) %></li>
      
      <li><%= link_bar_tab('link_bar_tab_9', 'icon_link twitter', TWITTER_URL, t('layout.top_bar.icons.twitter'), '&nbsp;', nil, active_tab_id) %></li>
    </ol>

  </div>
</div>

<div id='events_box' class='link_menu_box'>
  <a href='<%=eventbrite[:c4c_events_link]%>' title='<%= t('layout.top_bar.events_menu.summit_mouseover', :default => '') %>'><%= t('layout.top_bar.events_menu.summit') %></a>
  <a href='<%=eventbrite[:c4c_events_link]%>' title='<%= t('layout.top_bar.events_menu.winter_conference_mouseover', :default => '') %>'><%= t('layout.top_bar.events_menu.winter_conference') %></a>
  <a href='http://gototheworld.com' title='<%= t('layout.top_bar.events_menu.projects_mouseover', :default => '') %>'><%= t('layout.top_bar.events_menu.projects') %></a>
</div>

<div id='more_tools_box' class='link_menu_box'>
  <a href='http://www.gcx2.org' title='<%= t('layout.top_bar.more_menu.gcx_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.gcx') %></a>
  <a href='https://pat.powertochange.org' title='<%= t('layout.top_bar.more_menu.pat_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.pat') %></a>
  <a href='https://mpdtool.powertochange.org' title='<%= t('layout.top_bar.more_menu.mpd_tool_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.mpd_tool') %></a>
  <a href='http://www.glclive.com' title='<%= t('layout.top_bar.more_menu.glc_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.glc') %></a>
  <a href='https://tm.thementorcenter.com' title='<%= t('layout.top_bar.more_menu.mt_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.mt') %></a>
  <a href='https://connect.powertochange.org/' title='<%= t('layout.top_bar.more_menu.connect_mouseover', :default => '') %>'><%= t('layout.top_bar.more_menu.connect') %></a>
</div>

<% if staff %>
  <div id='staff_box' class='link_menu_box'>
    <a href='https://www.mygcx.org/C4C_Staff_Intranet/screen/home' title='Staff Dashboard'>STASH</a>
    <a href='http://mail.c4c.ca/' title='Google Mail'>MAIL</a>
    <a href='http://docs.c4c.ca/' title='Google Documents'>DOCUMENTS</a>
    <a href='http://calendar.c4c.ca/' title='Google Calendar'>CALENDAR</a>
    <a href='https://focus.crusade.org'>FOCUS</a>
    <a href='http://staff.powertochange.org'>THE LOOP</a>
    <a href='<%= url_for(:action => :index, :controller => :summer_reports, :only_path => false) %>' title='Staff summer schedules'>SUMMER</a>
  </div>
<% end %>
