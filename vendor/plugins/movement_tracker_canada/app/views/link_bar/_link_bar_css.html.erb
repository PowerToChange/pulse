<style type="text/css"> 

  div#link_bar_wrapper {
    width: 100%;
    padding-top: 9px;
    background-color: #666766;
    font-family: Helvetica, Arial, Sans-Serif;

    -moz-box-shadow:0 -5px 10px #575757 inset; -webkit-box-shadow:0 -5px 10px #575757 inset; box-shadow:0 -5px 10px #575757 inset;
  }

  div.link_bar {
    display: block;
    position:relative;
    height: 30px;
    width: <%= page_wrapper_width %>; /* page wrapper width */
    margin-left: auto;
    margin-right: auto;
    font-size:11px;
    line-height:11px;
  }

  div.link_bar div#tools {
    position:absolute;
    bottom:8px;
  }

  div.link_bar div#tools {
    left:0;
  }

  div.link_bar div#tools nobr, div.link_menu_box {
    padding-top: 1px;
  }

  div.link_bar .rl {
    margin-left: 0.6em;
  }

  div.link_bar strong.tab_left {
    color: #A6A6A6;
    background: url("<%=@base_url if @base_url%>/images/link_bar_tab_left.png") no-repeat scroll left bottom transparent;
    padding-left: 12px;
    padding-right: 0px;
  }

  div.link_bar strong.tab_right {
    background: url("<%=@base_url if @base_url%>/images/link_bar_tab_right.png") no-repeat scroll left bottom transparent;
    padding-left: 10px;
    padding-right: 0px;
  }

  div.link_bar a {
    color: #D8D8D8;
    text-decoration: none;
    
    -moz-transition: 0.05s ease 0s; -webkit-transition: 0.05s ease 0s; transition: 0.05s ease 0s;
  }

  div.link_bar a:hover, div.link_menu_box a:hover {
    color:#FFCB05;
  }

  div.link_bar a.ll {
    padding-bottom: 6px;
    border: solid transparent 8px;
    border-bottom:0;
  }

  div.link_bar a:hover, div.link_bar u:hover {
    text-decoration: none;
  }

  div.link_menu_box {
    display: none;
    position: absolute;
    text-align: left;
    right: auto;
    padding-bottom: 3px;
    border: 6px solid #4c4c4c;
    z-index: 1001;
    background: #4c4c4c;
    font-size: 11px;
    font-family: Helvetica, Arial, Sans-Serif;

    -moz-box-shadow: 1px 6px 5px #C8C8C8; -webkit-box-shadow: 1px 6px 5px #C8C8C8; box-shadow: 1px 6px 5px #C8C8C8;
    -moz-border-radius: 0 0 10px 10px; -webkit-border-radius: 0 0 10px 10px; border-radius: 0 0 10px 10px;
  }

  div.link_menu_box a {
    color:#D8D8D8;
    font-weight: bold;
    padding: 0.2em 0.6em;
    display: block;
    text-decoration: none;

    -moz-transition: 0.1s ease 0s; -webkit-transition: 0.1s ease 0s; transition: 0.1s ease 0s;
  }

  div.link_bar span.menu_link_arrow {
    background: url("<%=@base_url if @base_url%>/images/Garrowdown_s.png") no-repeat scroll transparent;
    display: inline-block;
    height: 5px;
    left: 3px;
    position: relative;
    top: -2px;
    width: 10px;
  }

  div.link_bar a.menu_link:hover span.menu_link_arrow {
    background-image: url("<%=@base_url if @base_url%>/images/Yarrowdown_s.png");
  }

  div.link_bar small {
    color: #1F429B;
  }

  div.link_bar .ll {
    font-weight:bold;
    display:inline;
    position:relative;
  }

  div.link_bar a.ll:hover {
    color:#FFCB05;
  }

  div.link_bar a.ll:hover, div.link_bar a.ll.menu_expanded {
    background-color:#4c4c4c;
    border-color:#4c4c4c;
    -moz-border-radius: 10px 10px 0 0; -webkit-border-radius: 10px 10px 0 0; border-radius: 10px 10px 0 0;
  }

  div.link_bar strong.ll a {
    color:#666766;
  }

  div.link_bar a small {
    color:#D8D8D8;
  }

  div.link_bar a img {
    position:relative;
    top:6px;
  }

  div.link_bar div.active {
    display: inline;
    padding-left: 0px;
    cursor: default;
  }

  div.link_bar div.active, div.link_bar strong {
    padding-top: 10px;
    padding-bottom: 6px;
  }

  div.link_bar .icon_link {
    padding-top:14px;
    padding-right:24px;
  }

  div.link_bar a.icon_link:hover {
    background-color:transparent;
  }

  div.link_bar a.facebook {
    background: url("<%=@base_url if @base_url%>/images/debicons/facebooklogo.png") no-repeat scroll center transparent;
    border-width: 0;
  }
  div.link_bar a.facebook:hover {
    background-image: url("<%=@base_url if @base_url%>/images/debicons/Yfacebooklogo.png");
  }

  div.link_bar a.twitter {
    background: url("<%=@base_url if @base_url%>/images/debicons/twitterlogo.png") no-repeat scroll center transparent;
    border-width: 0;
    padding-left: 10px;
  }
  div.link_bar a.twitter:hover {
    background-image: url("<%=@base_url if @base_url%>/images/debicons/Ytwitterlogo.png");
  }
  
</style>
