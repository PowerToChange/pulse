<%= stylesheet_link_tag "link_bar.css" %>

<script type="text/javascript">
  $(document).ready(function() {

    $("a.more_tools").click(function(e) {
      e.preventDefault();
      $("div#more_tools_box").toggle();
    });

    $(document).mouseup(function(e) {
      if($(e.target).parent("a.more_tools").length == 0) {
        $("div#more_tools_box").hide();
      }
    });

  });
</script>

