<%= stylesheet_link_tag "link_bar.css" %>

<% if logged_in? && @me  %>


<script type="text/javascript">
  $(document).ready(function() {

    $("a.menu_link").click(function(e) {
      e.preventDefault();
      box = $("div#" + $(e.target).attr("link_menu_box_id"));
      box.css('left', $(e.target).offset().left);
      $(e.target).addClass('menu_expanded');
      box.slideToggle();
    });

    $(document).mouseup(function(e) {
      $("a.ll").removeClass('menu_expanded');
      $(".link_menu_box").hide();
    });

  });
</script>


<div id="link_bar_wrapper">
  <div class="link_bar">

    <div id="tools">
      <a class="ll" href="http://www.campusforchrist.org" title="Campus for Christ"><%=image_tag "/images/c4corg.png"%>.ORG</a>

      <div class="active"><b class="ll">THE PULSE</b></div>

      <a class="ll" href="http://resources.campusforchrist.org" title="C4C Resources Wiki">RESOURCES</a>
      <a class="ll menu_link project" href="" link_menu_box_id="events_box">EVENTS</a>
      <a class="ll menu_link more_tools" href="" link_menu_box_id="more_tools_box">MORE</a>
      <% if is_staff_somewhere(@me) %>
        <a class="ll menu_link staff" href="" link_menu_box_id="staff_box">STAFF</a>
      <% end %>
    </div>

    <div id="user">
      <%= link_to("Logout", session_url, :method => :delete, :class => "rl log_out") %>
    </div>

  </div>
</div>

<div id="events_box" class="link_menu_box">
  <a href="http://campusforchrist.eventbrite.com">SUMMIT</a>
  <a href="http://campusforchrist.eventbrite.com">WINTER CONFERENCE</a>
  <a href="http://gototheworld.com" title="Go to the world!">PROJECTS</a>
</div>

<div id="more_tools_box" class="link_menu_box">
  <a class="ll" href="http://www.mygcx.org" title="Global ConneXion">GCX</a>
  <a href="https://mpdtool.powertochange.org" title="Ministry Partner Development Tool">MPD TOOL</a>
  <a href="http://www.glclive.com" title="Global Learning Center">GLC</a>
</div>

<% if is_staff_somewhere(@me) %>
<div id="staff_box" class="link_menu_box">
  <a href="https://www.mygcx.org/C4C_Staff_Intranet/screen/home" title="Staff Dashboard">STASH</a>
  <a href="https://docs.google.com/a/c4c.ca" title="Google Documents">DOCUMENTS</a>
  <a href="https://www.google.com/calendar/hosted/c4c.ca" title="Google Calendar">CALENDAR</a>
  <a href="https://focus.crusade.org">FOCUS</a>
  <a href="http://staff.powertochange.org">THE LOOP</a>
</div>
<% end %>


<% end %>