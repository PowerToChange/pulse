<h1>Users</h1>
<br/>
<% form_remote_tag :url => {:action => 'search'}, :before => "$('#spinnerp').show()", :complete => "$('#spinnerp').hide()" do %>
  <p>Search for users by entering part of their user name, account group, GUID or viewer ID.</p>
  <p>
    <%= text_field :search, :query %>
    <%= submit_tag 'Search' %>
    <%= spinner('p') %>
  </p>
<% end %>

<%= link_to 'New user', new_accountadmin_user_path %>
  
<div id="users">
  <% if @users %>
    <%= render(:partial => "users" , :object => @users) %>
  <% end %>
</div>

