<h1>Editing Person</h1>
<br/>
<h2><%=h @cim_hrdb_person.id.to_s + " - " + @cim_hrdb_person.first_name + " " + @cim_hrdb_person.last_name %></h2>
<br/>

<% if @cim_hrdb_person.cim_hrdb_staff %>
  <p>
    <%= check_box_tag :is_active, "", @cim_hrdb_person.cim_hrdb_staff.boolean_is_active %>
    <%= observe_field :is_active, :url => {:action => 'change', :controller => "cim_hrdb_staff", :person_id => @cim_hrdb_person.id, :staff_id => @cim_hrdb_person.cim_hrdb_staff.staff_id}, :before => "$('#spinneria').show()", :complete => "$('#spinneria').hide()" %>
    <b>Is active</b>
    <%= spinner('ia') %>
  </p>
<% end %>

<hr><br/></hr>
<p>
  <b>Year in School:</b>
  <%= render(:partial => "person_year" , :object => @person_years) %>
</p>
<br/>
<hr><br/></hr>
<p>
  <b>Assignments:</b>
  <%= render(:partial => "assignments" , :object => @assignments) %>
</p>
<br/>
<hr><br/></hr>
<%= link_to 'Back', cim_hrdb_people_path %>
