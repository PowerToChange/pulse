              <center>
                <%= stat = Week.find_stats_semester_campus(semester.id, @campusID, sp_conv_std) %>
              </center>
              <% total += stat %>
          </td>
        <% end %>

        <td>
            <center>
                <%= total %>
            </center>
        </td>
    </tr>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
        <td>
            Gospel Presentations by Staff
        </td>
        <% total = 0 %>

        <% semesters.each do |semester| %>
