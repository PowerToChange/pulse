<table class="t1">
    <tr>
        <td class="t2">
        </td>
        <% semesters = Semester.find_semesters_by_year(@yearID) %>

        <% semesters.each do |semester| %>
          <td>
              <center>
                  <span class="bold"><%=link_to "#{semester.description}", :action => "semester_at_a_glance", :semester => { 'campus' => @campusSelected, 'semester' => "#{semester.description}"} %></span>
              </center>
          </td>
        <% end %>

        <td>
            <center>
                <span class="bold">Total</span>
            </center>
        </td>

    </tr>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
        <td>
            Spiritual Conversations by Staff
        </td>
        <% total = 0 %>

        <% semesters.each do |semester| %>
          <td>
              <center>
                  <%= stat = Week.find_stats_semester_campus(semester.id, @campusID, sp_conv) %>
              </center>
              <% total += stat %>
          </td>
        <% end %>

        <td>
            <center>
                <%= total %>
            </center>
        </td>
    </tr>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
        <td>
            Spiritual Conversations by Students
        </td>
        <% total = 0 %>

        <% semesters.each do |semester| %>
