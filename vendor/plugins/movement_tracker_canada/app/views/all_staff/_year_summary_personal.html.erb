              <center>
                <%= stat = Week.find_stats_semester_campus(semester.id, @campusID, gos_pres) %>
              </center>
              <% total += stat %>
          </td>
        <% end %>

        <td>
            <center>
                <%= total %>
            </center>
        </td>
    </tr>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
        <td>
            Gospel Presentations by Students
        </td>
        <% total = 0 %>

        <% semesters.each do |semester| %>
