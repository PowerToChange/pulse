<% form_for :report, :html => { :name => 'reportForm' } do |form| %>
  <%= form.label :week, "Week" %>
  <%= form.collection_select :week, @weeks, :id, :end_date, :selected => @week_id.to_i %>
  <%= observe_field 'report_week', :url => {:action => "select_report"},
                                   :with => "getWithStringForReportForm() + '&week=' + value",
                                   :before => "beginLoadingStatsTab()",
                                   :complete => "completeLoadingStatsTab()" %>
<% end %>