<% form_for :report, :html => { :name => 'reportForm' } do |form| %>
  <%= form.label :month, "Month" %>
  <%= form.collection_select :month, @months, :id, :description, :selected => @month_id.to_i %>
  <%= observe_field 'report_month', :url => {:action => "select_report"},
                                    :with => "getWithStringForReportForm() + '&month=' + value",
                                    :before => "beginLoadingStatsTab()",
                                    :complete => "completeLoadingStatsTab()" %>
<% end %>