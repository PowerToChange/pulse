        <td class="statsTableTitle">
            Indicated Decisions
        </td>
        <% total = 0 %>
        <% @months.each do |month| -%>
        <% start_date = Month.find_start_date(month.id) %>
        <% end_date = Month.find_end_date(month.id) %>
        <% result = Prc.count_by_date_per_ministry(start_date,end_date,@stats_ministry_id) %>
