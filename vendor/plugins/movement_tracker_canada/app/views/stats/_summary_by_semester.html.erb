
<p><span class="statsTitle"><%= @report_description %></span></p>
<table class="statsTable">
    <tr>
        <td>
        </td>
        <% @months.each do |month| -%>
            <td>
                <span class="statsTableTitle"><%= sprintf "%s", month.description %></span>
            </td>
        <% end %>
        <td>
            <span class="statsTableTitle">Total</span>
        </td>
    </tr>
    <%= show_summary_weekly_stat_by_month("Spiritual Conversations by Staff", sp_conv, @months, @campus_ids) %>
    <%= show_summary_weekly_stat_by_month("Spiritual Conversations by Students", sp_conv_std, @months, @campus_ids) %>

    <%= show_totals_for_stat_group("Spiritual Conversations Total", @months) %>

    <%= show_summary_weekly_stat_by_month("Gospel Presentations by Staff", gos_pres, @months, @campus_ids) %>
    <%= show_summary_weekly_stat_by_month("Gospel Presentations by Students", gos_pres_std, @months, @campus_ids) %>

    <%= show_totals_for_stat_group("Gospel Presentations Total", @months) %>

    <%= show_summary_weekly_stat_by_month("Holy Spirit Presentations by Staff", hs_pres, @months, @campus_ids) %>

    <tr><td><br/></td></tr>
    <tr class='highlight'>
        <td class="statsTableTitle">
            Indicated Decisions
        </td>
        <% total = 0 %>
        <% @months.each do |month| -%>
        <% start_date = Month.find_start_date(month.id) %>
        <% end_date = Month.find_end_date(month.id) %>
        <% result = Prc.count_by_date_per_ministry(start_date,end_date,@stats_ministry_id) %>
        <% total += result %>
        <td>
            <%= sprintf "%s", result %>
        </td>
        <% end %>
        <td>
            <%= sprintf "%s", total %>
        </td>
    </tr>
<%
      if @monthly_report_permission 
        stats_reports[:monthly_report].each do | input_stat |
          %><%= show_summary_monthly_stat_by_month(input_stat[:label], input_stat[:column], @months, @campus_ids)%><%
        end
      end 

%>
</table>
