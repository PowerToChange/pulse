
<p class="statsTitle"><%= @report_description %></p>
<table class="statsTable">
  <tr>
      <td class="statsTableTitle"></td>
      <td class="statsTableTitle">Spiritual Conversations by Staff</td>
      <td class="statsTableTitle">Spiritual Conversations by Students</td>
      <td class="statsTableTitle">Gospel Presentations by Staff</td>
      <td class="statsTableTitle">Gospel Presentations by Students</td>
      <td class="statsTableTitle">Holy Spirit Presentations</td>
      <td class="statsTableTitle">Indicated Decisions</td>
  </tr>

  <% total_stats = {gos_pres => 0, gos_pres_std => 0, sp_conv => 0, sp_conv_std => 0, hs_pres => 0, "prcs" => 0} %>

  <% @campuses.each do |campus| %>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
      <td class="statsTableTitle"><%= campus.short_desc %></td>
      <td><%= @campus_stats[campus.id][sp_conv] %></td>
      <td><%= @campus_stats[campus.id][sp_conv_std] %></td>
      <td><%= @campus_stats[campus.id][gos_pres] %></td>
      <td><%= @campus_stats[campus.id][gos_pres_std] %></td>
      <td><%= @campus_stats[campus.id][hs_pres] %></td>
      <td><%= @campus_prcs[campus.id] %></td>

      
      <% total_stats[sp_conv] += @campus_stats[campus.id][sp_conv] %>
      <% total_stats[sp_conv_std] += @campus_stats[campus.id][sp_conv_std] %>
      <% total_stats[gos_pres] += @campus_stats[campus.id][gos_pres] %>
      <% total_stats[gos_pres_std] += @campus_stats[campus.id][gos_pres_std] %>
      <% total_stats[hs_pres] += @campus_stats[campus.id][hs_pres] %>
      <% total_stats["prcs"] += @campus_prcs[campus.id] %>
    </tr>
  <% end %>

  <tr><td><br/></td></tr>
  <tr class="highlight">
    <td class="statsTableTitle">Totals:</td>
    <td><%= total_stats[sp_conv] %></td>
    <td><%= total_stats[sp_conv_std] %></td>
    <td><%= total_stats[gos_pres] %></td>
    <td><%= total_stats[gos_pres_std] %></td>
    <td><%= total_stats[hs_pres] %></td>
    <td><%= total_stats["prcs"] %></td>
  </tr>
</table>
