<% total = 0 %>
<tr class="<%= cycle('highlight', 'nohighlight') %><%= special_css_class %>">
  <td class="statsTableTitle">
    <%= title %>
  </td>

  <% stats_array.each do | stat | %>
    <td>
      <%= stat %>
      <% total += stat if special_total.nil? && print_total %>
    </td>
  <% end %>

  <td>
    <%= print_total ? (special_total.nil? ? total : special_total) : '<span title="Not applicable">n/a</span>' %>
  </td>
</tr>

