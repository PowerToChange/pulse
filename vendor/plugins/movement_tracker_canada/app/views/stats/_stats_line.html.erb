<% total = 0 %>
    <tr class="<%= cycle('highlight', 'nohighlight') %><%= special_css_class %>">
        <td class="statsTableTitle">
            <%= title %>
        </td>
				
        <% stats_array.each do | stat | %>
          <td>
              <%= stat %>
              <% total += stat if special_total.nil? %>
          </td>
        <% end %>

        <td>
            <%= special_total.nil? ? total : special_total %>
        </td>
    </tr>

