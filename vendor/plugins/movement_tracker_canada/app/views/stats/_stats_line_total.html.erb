    <tr class="<%= cycle('highlight', 'nohighlight') %> statsTableTotal">
        <td class="statsTableTitle">
            <%= title %>
        </td>

        <% stats_array.each_with_index do |stat, i| %>
          <td>
              <%= @total_section[i] %>
              <% @total_section[i] = 0 %>
          </td>
