<p><span class="statsTitle"><%= @report_description %></span></p>
<table class="statsTable">
    <tr>
        <td><span class="statsTableTitle">Method</span></td>
        <td><span class="statsTableTitle">Number</span></td>
        <td><span class="statsTableTitle">Percent</span></td>
        <td><span class="statsTableTitle">Completed Follow-up</span></td>
        <td><span class="statsTableTitle">Percent Completed Follow-up</span></td>
    </tr>

    <% methodTotal = 0 %>
    <% completedTotal = 0 %>
    <% @methods.each_with_index do |method, i| %>
        <% if i != 0 && !(Prcmethod.find_by_prcMethod_id i).nil? %>
            <tr class="<%= cycle('highlight', 'nohighlight') %>">
                <td>
                    <%= (Prcmethod.find_by_prcMethod_id i).prcMethod_desc %>
                </td>
                <td>
                    <center>
                        <%= method %>
                        <% methodTotal += method %>
                    </center>
                </td>
                <td>
                    <center>
                        <%= @total != 0 ? (method*100)/@total : "0" %>%
                    </center>
                </td>
                <td>
                    <center>
                        <%= @completed[i] %>
                        <% completedTotal += @completed[i] %>
                    </center>
                </td>
                <td>
                    <center>
                        <%= method != 0 ? (@completed[i]*100)/method : "0" %>%
                    </center>
                </td>
            </tr>
        <% end %>
    <% end %>
    <tr>
      <td>
        <br/>
        Totals:
      </td>
      <td>
        <br/>
        <%= methodTotal %>
      </td>
      <td>
      </td>
      <td>
        <br/>
        <%= completedTotal %>
      </td>
      <td>
        <br/>
        <%= methodTotal != 0 ? (completedTotal*100) / methodTotal : "0" %>%
      </td>
    </tr>

</table>


