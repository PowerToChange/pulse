<p><span class="statsTitle"><%= @report_description %></span></p>
<table class="statsTable">


    <tr>
        <td><span class="statsTableTitle">Date</span></td>
        <td><span class="statsTableTitle">New Believer</span></td>
        <td><span class="statsTableTitle">Witness</span></td>
        <td><span class="statsTableTitle">Method</span></td>
        <td><span class="statsTableTitle">Synopses</span></td>
        <td><span class="statsTableTitle">Follow-up Complete</span></td>
    </tr>

    <% @prcs.each do |prc| %>
        <% if !prc.nil? %>
	        <tr class="<%= cycle('highlight', 'nohighlight') %>">
	            <td>
                  <%= prc.prc_date %>
	            </td>
	            <td>
                  <%= prc.prc_firstName %>
	            </td>
	            <td>
                  <%= prc.prc_witnessName %>
	            </td>
	            <td>
                <% if !prc.prcMethod.nil? %>
                  <%= prc.prcMethod.prcMethod_desc %>
                <% end %>
	            </td>
	            <td>
                  <%= prc.prc_notes %>
	            </td>
              <td>
                  <% if prc.prc_7upCompleted == 0 %>
                        No
                  <% else %>
                        Yes
                  <% end %>
              </td>							
	        </tr>
        <% end %>
    <% end %>
</table>
