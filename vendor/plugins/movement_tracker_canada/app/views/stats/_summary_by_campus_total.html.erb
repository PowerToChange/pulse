<table class="t1">
    <tr>
        <td class="t4">
        </td>
        <% @campuses.each do |campus| %>
        <td class="t4">
            <center>
                <%= campus.campus_shortDesc %>
            </center>
        </td>
        <% end %>
        <td class="t4">
            <center>
                <span class="">Total</span>
            </center>
        </td>
    </tr>
    <tr>
        <td class="t4">
            Campus Summary
        </td>
        <% @campuses.each do |campus| %>
        <% campus_id = campus.id %>
        <td class="t4">
            <center>
                <%#=link_to "View", :controller => "all_staff", :action => "year_summary", :year => {'year' => @year_selected, 'campus' => Campus.find_campus_description(campus_id) } %>
            </center>
        </td>
        <% end %>
        <td class="t4">
        </td>
    </tr>
    <tr class="<%= cycle('highlight', 'nohighlight') %>">
        <td class="t4">
            Spiritual Conversations by Staff
        </td>
        <% total = 0 %>
        <% @campuses.each do |campus| %>
        <% campus_id = campus.id %>
        <td class="t4">
            <center>
                <%= stat = Week.find_stats_semester_campus(@semester_id,campus_id,sp_conv) %>
                <% total += stat %>
            </center>
        </td>
        <% end %>
        <td class="t4">
            <center>
                <%= total %>
            </center>
        </td>
    </tr>
