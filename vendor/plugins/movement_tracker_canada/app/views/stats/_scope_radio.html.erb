<div id='stats<%= radio[:value].camelize %>RadioContainer' class='statsRadioButton<%= radio[:show] ? "" : " notDisplayed" %>'>
  <%= radio_button "report", "scope", radio[:value], {:checked => radio[:checked], :disabled => radio[:disabled], :title => radio[:title]}%>
  <%= label_tag "report_scope_#{radio[:value].downcase}", radio[:label], :disabled => radio[:disabled], :id => "report_scope_#{radio[:value].downcase}_label", :title => radio[:title] %>
  <%= observe_field "report_scope_#{radio[:value].downcase}", :url => {:action => "select_report"},
                                                                                     :with => "getWithStringForReportForm()",
                                                                                     :before => "beginLoadingStatsTab()",
                                                                                     :complete => "completeLoadingStatsTab()"%>
    
</div>

